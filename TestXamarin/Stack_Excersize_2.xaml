<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TestXamarin.Stack_Excersize_2">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0">
            </OnPlatform>
    </ContentPage.Padding>
	<StackLayout >
        <Label Text="nyc_photographer"
            Margin="20, 0, 0, 0"
            />
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"
            HorizontalOptions="FillAndExpand"/>
        <StackLayout Orientation="Horizontal" Padding="10, 0, 0, 10" Spacing="20">
            <Button Text="Like" />
            <Button Text="Comment" />
            <Button Text="Share" />
        </StackLayout>
        <BoxView HeightRequest="1" 
            BackgroundColor="#f0f0f0"
            Margin="10, 0, 0, 10" />
        <Label Text="700 likes" 
            Margin="10, 0, 0, 10"
            FontAttributes="Bold" />
        <Label Text="Note that the image is filling the entire page horizontally, but we have some padding around other elements. To implement this, you can have a parent StackLayout that fills the page horizontally, and a nested StackLayout with some padding." 
            Margin="10, 0, 0, 10"
             />
    </StackLayout>
</ContentPage>
